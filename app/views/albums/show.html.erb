<h3> Showing Tracks of <%= @album.title %> </h3>

<div class="mb-3">
  <%= link_to  "Edit Album", edit_album_path, class: "btn btn-outline-info" %>

  <%= link_to "Back", "/albums/", class: "btn btn-secondary" %>
</div>

<fieldset>


<!-- ACOORDION NÃO ESTÁ FUNCIONANDO -->
 
<div class="accordion"> 
	<% @tracks.each do |track| %>
  
  <div class="card">
           <div class="card-header" id="heading<%= track.id%>">
             <h2 class="mb-0">
               <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%= track.id%>" aria-expanded="false" aria-controls="collapse<%= track.id%>">
                 <%= track.name%>
               </button>
             </h2>
           </div>



       <div id="collapse<%= track.id%>" class="collapse" aria-labelledby="heading<%= track.id%>" data-parent="#accordionExample">
         <div class="card-body">
           <b> Media Type: </b> <%= track.media_type.name %> <br>
           <b> Genre: </b> <%= track.genre.name %> <br>
           <b> Composer: </b> <%= track.composer %> <br>
           <b> Milliseconds: </b> <%= track.milliseconds %> <br>
           <b> Size (bytes): </b> <%= track.bytes %> <br>
           <b> Unit Price: </b> <%= track.unit_price %> <br>
         </div>

       </div>
     </div>
   </div>
  </div>
<% end %>


</fieldset>