<!DOCTYPE html>
<html>
<head>
  <h3> New Track </h3>

<%= @track.errors.first %>

<%= form_for @track do |f| %>
<form>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Nome:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Album:</label>
    <div class="col-sm-10">
      <%= f.select :album_id, options_for_select(@albums.collect{ |album| [album.title, album.id] },params[:album_id]),{}, class: "form-control"%>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Media Type:</label>
    <div class="col-sm-10">
      <%= f.select :media_type_id, options_for_select(@media_types.collect{ |media_type| [media_type.name, media_type.id] },params[:media_type_id]),{}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Genre:</label>
    <div class="col-sm-10">
      <%= f.select :genre_id, options_for_select(@genres.collect{ |genre| [genre.name, genre.id] },params[:genre_id]),{}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Composer:</label>
    <div class="col-sm-10">
      <%= f.text_field :composer, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Milliseconds:</label>
    <div class="col-sm-10">
      <%= f.text_field :milliseconds, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Size (bytes):</label>
    <div class="col-sm-10">
      <%= f.text_field :bytes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Unit-price:</label>
    <div class="col-sm-10">
      <%= f.text_field :unit_price, class: "form-control" %>
    </div>
  </div>

<%= f.submit 'Save', class: "btn btn-primary" %>
<%= link_to "Cancel", "/tracks", class: "btn btn-secondary" %>

<%= link_to "Back to Albums", "/albums", class: "btn btn-secondary" %>
</form>

<% end %>
  </center> 
</body>
</html>