<!DOCTYPE html>
<html>
<head>
	<title>Artist Albums</title>
</head>
<body>
	<center>
		<h3> <%= @artist.name %> Albums</h3><p class="text-secondary">Click album to see tracks.</p><br> 

		<% @albums = Album.where(artist: @artist.id) %> 
		<a href="/">
			<button type="button" class="btn btn-outline-success">Return to Artists</button>
		</a>
		<a href="/artists/update">
			<button type="button" class="btn btn-info"> <%= link_to  "Edit", edit_artist_path %></button>
		</a>

		<% @albums.each do |alb| %>

			<div class="card" style="width: 18rem;">
			<div class="card-body"> 
			<h5 class="card-title">
				<%= alb.title %>
			</h5>
			 
			<p class="card-text"> Tracks: <%= alb.tracks.count %> </p>
			<p class="card-text"> Created at: <%= formatar(alb.created_at) %> </p>
			<p class="card-text"> Update at: <%= formatar(alb.updated_at) %> </p>


			<a href="/tracks/show" class="btn btn-primary">Show tracks</a>

		</div>
		<% end %>

	</center>
</body>
</html>